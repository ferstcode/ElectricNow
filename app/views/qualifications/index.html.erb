
<div class="jumbotron">
    <div class="container text-center">
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm">
              <%= image_tag @electric.image, size: '150', class:'rounded-circle', alt: 'Foto Usuario' %>
            </div>
            <div class="col-sm">
                <h2><%= @electric.name %></h2>

                <% if  @prom > 0 %>
                    <p><%= @prom %></p>
                <% else %>
                    <p> Sin Calificaciones </p>
                <% end %>
                <% if current_user.client? && current_user.id != @electric.id %>
                    <p><%=link_to 'Enviar levantamiento', nested_detection_electric_path(@electric), remote: true, class:'btn btn-primary btn-lg'%>
                <% end %>
            </div>
            <div class="col-sm"></div>
        </div>
    </div>
</div>
<div class="container">
  <div class="text-center">
      <h3>Calificaciones</h3>
  </div>
  <% if !@qualifications.empty? %>
      <table class="table">
        <thead>
        <tr>
          <th>Cliente</th>
          <th>Calificaci√≥n</th>
          <th>Comentario</th>
          <th>Fecha</th>
        </tr>
        </thead>
        <tbody>
        <%  @qualifications.each do |q|%>
            <tr>
              <td><%= q.client.name%></td>
              <td> <%= q.calification %></td>
              <td><%= q.detail%></td>
              <td><%= q.created_at.strftime('%d-%m-%Y') %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <% else %>
      <h5 class="text-center">No tiene calificaciones</h5>
  <% end %>
</div>
<div class="text-center">
  <%=link_to 'Volver', :back, class: 'btn btn-outline-secondary btn-lg'%>
</div>