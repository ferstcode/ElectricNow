<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field custom-field">
    <%= f.label :email, class:'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Correo electrónico', class:'form-control', required: true, type: 'email'%>
  </div>

  <div class="field custom-field">
    <%= f.label :password, class:'sr-only' %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Contraseña', class:'form-control', required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field custom-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordarme" %>
    </div>
  <% end %>

  <div class="actions custom-field">
    <%= f.submit "Ingresar", class:'btn btn-lg btn-primary btn-block'%>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


