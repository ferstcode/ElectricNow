<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Hallazgo</th>
        </tr>
    </thead>
    <tbody> 
        
        <% @detections.each do |d| %>
        <% if !d.electric_id.present? %>
        <tr>
            <td><%= d.user.name %></td>
            <td><%= d.detail%></td> 
            <td><%= link_to 'Detalle', detection_path(d.id), class:"btn btn-primary"%></td>           
        </tr>
        <% end %>
        <% end %>
    </tbody>
</table>